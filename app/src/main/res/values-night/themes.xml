<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DATN_MD02" parent="Theme.Material3.Light.NoActionBar">

        <!-- ✅ Checkbox/Radio/Toggle màu nền và border -->
        <item name="android:colorButtonNormal">@android:color/transparent</item>
        <item name="android:buttonStyle">@style/CustomCheckbox</item>

        <!-- ✅ Ripple mặc định (nếu còn tồn tại) -->
        <item name="android:colorEdgeEffect">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>

        <!-- ✅ Text/Accent tránh tím -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>

    </style>

    <!-- ✅ Custom style checkbox -->
    <style name="CustomCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
    </style>

</resources>