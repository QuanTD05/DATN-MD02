<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#F8F8F8">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <!-- Khoảng trống -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Giỏ hàng -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Icon giỏ hàng nhỏ hơn -->
            <ImageView
                android:id="@+id/ivCartIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_cart"
                android:contentDescription="Giỏ hàng" />

            <!-- Badge thông báo vừa khung -->
            <TextView
                android:id="@+id/tvCartBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:translationX="5dp"
                android:translationY="-5dp"
                android:gravity="center"
                android:text="50"
                android:textSize="9sp"
                android:textStyle="bold"
                android:background="@drawable/bg_edittext"
                android:textColor="#E64A19" />
        </FrameLayout>
    </LinearLayout>

    <!-- TabLayout có contentDescription -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutNoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:elevation="4dp"
        android:contentDescription="Thanh chuyển tab thông báo"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerNoti"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
