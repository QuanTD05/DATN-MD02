<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Nền trắng -->
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" /> <!-- Viền xám nhạt -->
            <corners android:radius="8dp" /> <!-- Bo góc nhẹ -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
